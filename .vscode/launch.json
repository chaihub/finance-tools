{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Excel Processor",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/excel_processor.py",
            "args": [
                "data/Manufacturing_Accounting_Simple.xlsx",
                "Input",
                "Output",
                "sum"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_excel_processor.py",
                "-v",
                "-s"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}